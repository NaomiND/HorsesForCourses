@using HorsesForCourses.Application
@using HorsesForCourses.Application.Paging
@using HorsesForCourses.Application.dtos
@using HorsesForCourses.Infrastructure
@using HorsesForCourses.MVC
@using HorsesForCourses.MVC.ViewModels
@model AssignCoachDTO

@{
    ViewData["Title"] = "Assign Coach";
}

<h3>Assign Coach to @ViewBag.CourseName</h3>

<form asp-action="AssignCoach" asp-route-id="@Model.CourseId" method="post">
    <div class="form-group">
        <label asp-for="CoachId">Select Coach</label>
        <select asp-for="CoachId" class="form-control"
            asp-items="@(new SelectList(Model.AvailableCoaches, "Id", "FullName"))">
            <option value="">-- Select a coach --</option>
        </select>
        <span asp-validation-for="CoachId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Assign</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
