@using HorsesForCourses.Application // imports for PagedResult<> and CoachSummary.
@using HorsesForCourses.Infrastructure
@using HorsesForCourses.MVC
@model PagedResults<ModelPagedResult> //dit is een modelview, geen dto

@{
    ViewData["Title"] = "Coaches Overzicht";
}

    <h1>@ViewData["Title"]</h1>

    <h2>Coaches</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th># Courses Assigned</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coach in Model.Items)
            {
                <tr>
                    <td>@coach.Id</td>
                    <td>@coach.Name</td>
                    <td>@coach.Email</td>
                    <td>@coach.NumberOfCoursesAssignedTo</td>
                </tr>
            }
        </tbody>
    </table>

