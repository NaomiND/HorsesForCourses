@using HorsesForCourses.Application
@using HorsesForCourses.Application.Paging
@using HorsesForCourses.Application.dtos
@using HorsesForCourses.Infrastructure
@using HorsesForCourses.MVC
@using HorsesForCourses.MVC.ViewModels;
@model CoachDetailDTO

@{
    ViewData["Title"] = "Coach Details";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<h3>Coachdetails for @Model.Name</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

@if (Model.Skills.Any())
{
    <div id="skills-container">
        @for (int i = 0; i < Model.Skills.Count; i++)
        {
            <div class="row skill-row mb-2 align-items-center">
                <dt class="col-sm-2">Skill @((i + 1)):</dt>
                <dd class="col-sm-10">@Model.Skills[i]</dd>
            </div>
        }
    </div>
}
else
{
    <p>This coach does not have skills.</p>
}

@if (Model.Courses.Any())
{
    <div id="assigned-courses-container">
        <dl class="row">
            @for (int i = 0; i < Model.Courses.Count; i++)
            {
                <dt class="col-sm-2">Course @((i + 1)):</dt>
                <dd class="col-sm-10">
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.Courses[i].Id">
                        @Model.Courses[i].Name
                    </a>
                </dd>
            }
        </dl>
    </div>
}
else
{
    <p>This coach has not been assigned to any courses.</p>
}

<div>
    <a asp-action="EditSkills" asp-route-id="@Model.Id" class="btn btn-warning">Edit skills</a>
    <a asp-action="Index" class="btn btn-secondary">Back to summary</a>
</div>

