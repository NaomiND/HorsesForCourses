@model HorsesForCourses.MVC.Models.RegisterAccountViewModel

@{
    ViewData["Title"] = "Register";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="Pass" class="form-label">Choose a password</label>
                <input type="password" asp-for="Pass" class="form-control" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="Pass" class="form-label">Confirm your password</label>
                <input type="password" asp-for="ConfirmPass" class="form-control" />
                <span asp-validation-for="ConfirmPass" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="IsCoach" />
                <label class="form-check-label" asp-for="IsCoach">I am a coach</label>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <partial name="_ValidationScriptsPartial" />
}